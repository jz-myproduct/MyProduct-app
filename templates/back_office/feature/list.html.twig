{% extends "back_office/base.html.twig" %}

{% block content %}
    <h1 class="h3">Features</h1>
    <ul>
        {% for feature in features %}
            <li>
                <a href="{{ path('feature-detail', { 'company_slug': companySlug, 'feature_id': feature.id } ) }}">{{ feature.name }}</a>
                <a href="{{ path('edit-feature', { 'company_slug': companySlug, 'feature_id': feature.id } ) }}">Upravit</a>
                <a href="{{ path('delete-feature', { 'company_slug': companySlug, 'feature_id': feature.id } ) }}">Smazat</a>
                <p>{{ feature.state.name }}</p>
            </li>
        {% endfor %}
    </ul>

{% endblock %}