{% extends "back_office/base.html.twig" %}

{% block content %}
    {% include('back_office/components/feedback_header.html.twig') %}

    {% include('back_office/components/feedback_tabs.html.twig') %}


    {% if insights %}
    <p>
        {% for insight in insights %}
            <span class="p-1">
                <a href="{{ path('bo_insight_edit', { 'company_slug': app.user.slug, 'insight_id':insight.id, 'p':redirectToFeedback } ) }}"
                   class="badge badge-info">{{ insight.feature.name }} ({{ insight.weight.name }})</a>
                <a href="{{ path('bo_insight_delete', {'company_slug': app.user.slug, 'insight_id':insight.id, 'p':redirectToFeedback } ) }}"
                   class="badge badge-danger font-weight-bold"><span aria-hidden="true">&times;</span></a>
            </span>
        {% endfor %}
    </p>
    {% endif %}

    <h2 class="h4 mt-4">Přidat</h2>
    {{ form(form) }}
    <p>
    {% if unrelatedFeatureList %}
        {% for unrelatedFeature in unrelatedFeatureList %}
            <span class="p-1">
                <a href="{{ path('bo_feature_detail', { 'company_slug': app.user.slug, 'feature_id': unrelatedFeature.id } ) }}"
                   class="badge badge-info">{{ unrelatedFeature.name }}</a>
                <a href="{{ path('bo_insight_feedback_add', {'company_slug': app.user.slug, 'feedback_id': feedback.id, 'feature_id': unrelatedFeature.id, 'p':redirectToFeedback } ) }}"
                   class="badge badge-success font-weight-bold">Přidat</a>
            </span>
        {% endfor %}
    {% else %}
        Žádné další featury k propojení.
    {% endif %}
    </p>
{% endblock %}