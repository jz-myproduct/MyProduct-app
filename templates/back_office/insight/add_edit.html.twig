{% extends "back_office/base.html.twig" %}

{% if app.request.get('_route') == 'bo_insight_feedback_add' %}
    {% set title_start = 'Přidat' %}
{% else %}
    {% set title_start = 'Upravit' %}
{% endif %}

{% block title %}{{ title_start }} insight{% endblock %}

{% block content %}

    <div style="max-width: 800px;" class="mx-auto">

        <p><a href="{{ backUrl }}"><i class="bi bi-arrow-bar-left"></i> zpět</a></p>
        <div class="border rounded pt-4">
            <h1 class="h5 mb-2 text-center">{{ title_start }} propojení</h1>

            <div class="d-flex flex-row flex-wrap align-items-center mt-3">
                <div style="width:45%" class="p-3">
                    <p class="text-center lead">
                    {{ feedback.description|length > 80 ? feedback.description|slice(0, 80) ~ '...' : feedback.description }}
                    </p>
                    <p class="text-center text-secondary">
                        {{ feedback.source|length > 80 ? feedback.source|slice(0, 80) ~ '...' : feedback.source }}
                    </p>
                </div>
                <div class="p-3">
                    <p class="h2 text-center"><i class="bi bi-arrow-right-square-fill"></i></p>
                </div>
                <div style="width:45%" class="p-3">
                    <p class="text-center lead">{{ feature.name }}</p>
                    <p class="text-center">
                        {% for tag in feature.tags %}
                            <span class="badge badge-info">{{ tag.name }}</span>
                        {% endfor %}
                    </p>
                </div>
            </div>

            <div class="p-3 text-center mx-auto" style="max-width: 400px;">
                <p class="lead text-secondary">Vyberte důležitost</p>
                {{ form(form) }}
            </div>

        </div>
    </div>

{% endblock %}