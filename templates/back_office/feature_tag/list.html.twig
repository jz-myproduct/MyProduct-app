{% extends "back_office/base.html.twig" %}

{% block content %}

    <h1 class="h3">Feature tags</h1>
    <a href="{{ path('bo_feature_tag_add', {'slug':app.user.slug}) }}" class="btn btn-primary mt-3" role="button">Přidat tag</a>

    {% if tags is not empty %}
        <table class="table table-striped mt-5">
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.name }}</td>
                    <td><a href="{{ path('bo_feature_tag_edit', {'company_slug': app.user.slug, 'tag_id':tag.id }) }}">Upravit</a></td>
                    <td><a href="{{ path('bo_feature_tag_delete', {'company_slug': app.user.slug, 'tag_id':tag.id }) }}">Smazat</a></td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p class="mt-5 lead">Zatím nemáte žádné features tags.</p>
    {% endif %}

{% endblock %}