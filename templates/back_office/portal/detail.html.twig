{% extends "back_office/base.html.twig" %}

{% block content %}
    <h1 class="h3">Portal</h1>
    {{ form(form) }}
    {% if portal.display %}
        <h3>Portal běží</h3>
        Portal naleznete <a href="{{ path('front-office-portal', {'slug':portal.slug}) }}">zde</a>
        <h4>Features k zobrazení</h4>

            {% for stateWithFeatures in featuresByState %}
                <strong>{{ stateWithFeatures.state }}</strong><br />
                {% for feature in stateWithFeatures.features %}
                    {{ feature.name }}<br/>
                {% endfor %}
            {% endfor %}

    {% endif %}
{% endblock %}