<h1 class="h3">Features</h1>

<a href="{{ path('bo_feature_add', {'slug':app.user.slug}) }}" class="btn btn-primary mt-3" role="button">Přidat feature</a>
<a href="{{ path('bo_feature_tag_list', {'slug':app.user.slug}) }}" class="btn btn-outline-secondary mt-3" role="button">Přehled tagů</a>

<div class="mt-3" id="feature_state_filter">
    {% if app.request.get('_route') == 'bo_feature_list' %}

        {{ form_start(form) }}
                {{ form_row(form.state) }}
                {% if tagsExist %}
                    {{ form_row(form.tags) }}
                {% else %}
                    {{ form_row(form.save) }}
                {% endif %}
        {{ form_end(form, {'render_rest': false}) }}

    {% endif %}

    {% if app.request.get('_route') == 'bo_feature_list_roadmap' and tagsExist %}
        {{ form(form) }}
    {% endif %}
</div>

<ul class="nav nav-tabs mt-4 justify-content-center">
    <li class="nav-item">
        <a class="nav-link {% if app.request.get('_route') == 'bo_feature_list' %}active{% endif %}"
           href="{{ path('bo_feature_list', {'slug':app.user.slug}) }}">Seznam</a>
    </li>
    <li class="nav-item">
        <a class="nav-link {% if app.request.get('_route') == 'bo_feature_list_roadmap' %}active{% endif %}"
           href="{{ path('bo_feature_list_roadmap', {'slug':app.user.slug}) }}">Roadmap</a>
    </li>
</ul>