<div class="d-flex flex-row flex-wrap justify-content-center">
    <div class="flex-grow-1">
        <h1 class="h3 text-center">
            <span class="badge text-light" style="background:{{ feature.state.color }}">{{ feature.state.name }}</span>
            {{ feature.name }}
        </h1>
        <p class="text-center">
            {% for tag in feature.tags %}
                <span class="badge badge-info">{{ tag.name }}</span>
            {% endfor %}
        </p>
        <p class="text-center text-secondary">Added {{ feature.createdAt|date('d.m.y H:i') }}</p>
    </div>
    <div>
        <div class="d-flex pb-3">
            <a style="font-size: 20px" href="{{ path('bo_feature_edit', {'company_slug':app.user.slug, 'feature_id':feature.id}) }}"
               class="btn btn-outline-primary"
               data-toggle="tooltip" data-placement="top" title="Edit">
                    <i class="bi bi-pencil-square"></i></a>

            <form class="pl-2" action="{{ path('bo_feature_delete', {'company_slug':app.user.slug, 'feature_id':feature.id}) }}" method="post">
                <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}"/>
                <button type="submit" class="btn btn-outline-danger"
                        {% include('back_office/components/delete_confirmation.html.twig') %} style="font-size:20px"><i class="bi bi-trash-fill"></i></button>
            </form>
        </div>
    </div>
</div>
