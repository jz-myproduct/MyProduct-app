<h1 class="h3 text-center">
    {% if feedback.isNew %}
        <span class="badge badge-danger">Nový</span>
    {% endif %}
    {% if feedback.fromPortal %}
        <span class="badge badge-info">Portal</span>
    {% endif %}
    Feedback
</h1>
<p class="text-center text-secondary">Přidáno {{ feedback.createdAt|date('d.m.y H:i') }}</p>
<p class="text-right">
    <a href="{{ path('bo_feedback_edit', {'company_slug':app.user.slug, 'feedback_id': feedback.id}) }}" class="btn btn-outline-primary">Upravit</a>
    <a href="{{ path('bo_feedback_change_status', {'company_slug': app.user.slug, 'feedback_id': feedback.id, 'p':redirectTo}) }}" class="btn btn-outline-secondary">Označit jako
        {% if feedback.isNew %}
            přečtený
        {% else %}
            nový
        {% endif %}
    </a>
    <a href="{{ path('bo_feedback_delete', {'company_slug': app.user.slug, 'feedback_id': feedback.id}) }}" class="btn btn-outline-danger">Smazat</a>
</p>