{% endblock %}

{% block body %}
    <div class="bg-success">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand text-light font-weight-bold" href="{{ path('fo_portal_detail', {'slug':portal.slug}) }}">{{ portal.name }}</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link btn btn-light" href="{{ path('fo_portal_general_feedback_add', {'slug':portal.slug}) }}">Přidat feedback</a>
