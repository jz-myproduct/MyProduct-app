{% extends "base.html.twig" %}
{% block title %}
    {{ 'register_action'|trans }}
{% endblock %}
{% block body %}
    {{ 'home_title'|trans }}
    {% if app.user %}
        <div class="mb-3">
            Administrace<br />
            You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
            <a href="{{ path('add-feedback', {slug: companySlug}) }}">Přidat feedback</a>
            <a href="{{ path('add-feature', {slug: companySlug}) }}">Přidat feature</a>
        </div>
        <h2>Portal</h2>
        {{ form(form) }}
        {% if portal.display %}
            <h3>Portal běží</h3>
            Portal naleznete <a href="{{ path('front-office-portal', {'slug':portal.slug}) }}">zde</a>
            <h4>Features k zobrazení</h4>
            <ul>
                {% for portalFeature in portalFeatures %}
                    <li><a href="{{ path('feature-portal', {'company_slug':companySlug, 'feature_id':portalFeature.feature.id}) }}">{{ portalFeature.name }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endif %}
{% endblock %}